<!-- views/productPage.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= product.title %> - Product Page</title>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>

</head>
<body>
    <div class="globalheader"><!-- Header goes here --></div>
        <div class="row">
            <div class="col-8">
                <div class="text-center prodimgdiv">
                    <img src="<%= product.image %>" class="rounded" alt="..."></img>
                  </div>
            </div>
            <div class="col-4">
                <div class="prodDetailsdiv">
                    <h1 class="display-4"><%= product.title %></h1>
                        <p class="lead"><%= product.description %></p>
                        <p><em><%= product.rating.count %> users have rated this product <%= product.rating.rate %>/5.0 on average.</em></p>
                        <h5><%= product.price.toFixed(2) %> USD</h5>
                        <div class="btn btn-primary btn-add-to-cart" onclick="updateCart('<%= product.id %>','add')">ADD TO CART</div>
                </div>
            </div>
          </div>
    <div class="globalfooter"><!-- Footer Goes Here --></div>
    <script src="/header.js"></script>
    <script src="/footer.js"></script>
    <script src="/myCart.js"></script>
</body>
</html>
